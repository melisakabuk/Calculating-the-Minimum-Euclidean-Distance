import math

# Öklid mesafesi hesaplama fonksiyonu
def euclideanDistance(point1, point2):
    return math.sqrt((point2[0] - point1[0]) ** 2 + (point2[1] - point1[1]) ** 2)

# Noktaların listesi
points = [(1, 2), (3, 4), (5, 6), (7, 8), (2, 1)]

# Tüm mesafeleri hesaplamak için liste
distances = []

# Minimum mesafeyi ve ilgili noktaları takip et
min_distance = float('inf')  # Başlangıç değeri olarak sonsuz
min_points = None  # Minimum mesafe bulunan noktalar

# Her nokta çifti arasındaki mesafeleri hesapla
for i in range(len(points)):
    for j in range(i + 1, len(points)):
        distance = euclideanDistance(points[i], points[j])
        distances.append(distance)
        if distance < min_distance:
            min_distance = distance
            min_points = (points[i], points[j])

# Minimum mesafeyi ve noktaları yazdır
print(f"Minimum mesafe: {min_distance}, Noktalar: {min_points}")
